# Database
DATABASE_URL="postgresql://user:password@localhost:5432/estilovivo?schema=public"

# Authentication
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-here-minimum-32-characters"

# Server
PORT=3000
NODE_ENV=development

# SMTP (opcional, para recuperación de contraseña)
# Si no configuras esto, la funcionalidad de recuperación de contraseña no funcionará
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="tu-email@gmail.com"
SMTP_PASS="tu-app-password"

# App
APP_URL="http://localhost:5173"

# Uploads
UPLOADS_DIR="./uploads"
