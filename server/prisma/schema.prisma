// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String     @id @default(cuid())
  email             String     @unique
  password          String
  name              String
  avatar            String?
  bio               String?
  mood              String?
  cycleTracking     Boolean    @default(false)
  musicSync         Boolean    @default(false)
  resetToken        String?
  resetTokenExpiry  DateTime?
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  
  products          Product[]
  looks             Look[]
  plannerEntries    PlannerEntry[]
  trips             Trip[]
  likes             Like[]
  comments          Comment[]
  favorites         Favorite[]
  followers         Follow[]   @relation("following")
  following         Follow[]   @relation("follower")
}

model Product {
  id          String     @id @default(cuid())
  name        String
  description String?
  price       Float?
  brand       String?
  category    String
  size        String?
  color       String?
  condition   String     @default("new")
  season      String     @default("all")
  usageCount  Int        @default(0)
  lastWorn    DateTime?
  forSale     Boolean    @default(false)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  userId      String
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  images      ProductImage[]
  looks       Look[]
  favorites   Favorite[]
}

model ProductImage {
  id        String     @id @default(cuid())
  url       String
  filename  String
  createdAt DateTime   @default(now())
  
  productId String
  product   Product    @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Look {
  id          String     @id @default(cuid())
  title       String
  description String?
  isPublic    Boolean    @default(false)
  mood        String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  userId      String
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  products    Product[]
  images      LookImage[]
  plannerEntries PlannerEntry[]
  likes       Like[]
  comments    Comment[]
  favorites   Favorite[]
}

model LookImage {
  id        String     @id @default(cuid())
  url       String
  filename  String
  createdAt DateTime   @default(now())
  
  lookId    String
  look      Look       @relation(fields: [lookId], references: [id], onDelete: Cascade)
}

model PlannerEntry {
  id        String   @id @default(cuid())
  date      String   // ISO date string YYYY-MM-DD
  lookId    String?
  look      Look?    @relation(fields: [lookId], references: [id])
  eventNote String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
}

model Trip {
  id          String     @id @default(cuid())
  destination String
  dateStart   String
  dateEnd     String
  userId      String
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items       TripItem[]
}

model TripItem {
  id          String  @id @default(cuid())
  label       String
  checked     Boolean @default(false)
  isEssential Boolean @default(false)
  tripId      String
  trip        Trip    @relation(fields: [tripId], references: [id], onDelete: Cascade)
}

model Like {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lookId    String
  look      Look     @relation(fields: [lookId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, lookId])
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lookId    String
  look      Look     @relation(fields: [lookId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lookId    String?
  look      Look?    @relation(fields: [lookId], references: [id], onDelete: Cascade)
  productId String?
  product   Product? @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, lookId])
  @@unique([userId, productId])
}

model Follow {
  id          String   @id @default(cuid())
  followerId  String
  follower    User     @relation("follower", fields: [followerId], references: [id], onDelete: Cascade)
  followingId String
  following   User     @relation("following", fields: [followingId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())

  @@unique([followerId, followingId])
}
